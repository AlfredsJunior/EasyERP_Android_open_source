<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llAppLogo_AL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/login_logo_margin"
        tools:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_easyerp_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_between_logo_and_text"
            app:srcCompat="@drawable/ic_logo_text" />
    </LinearLayout>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:layout_marginEndPercent="@fraction/login_form_land_margin_end_percents"
        app:layout_widthPercent="@fraction/login_form_land_width_percents">

        <include layout="@layout/view_include_frame_login" />

        <include layout="@layout/view_include_frame_signup_details" />

    </FrameLayout>

</android.support.percent.PercentRelativeLayout>
