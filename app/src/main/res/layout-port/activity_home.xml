<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_include_master_flow_toolbar" />

    <FrameLayout
        android:id="@+id/flContentDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerContainer_
            android:id="@+id/mdvMenuContainer_AH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedMenuWidth="@dimen/collapsed_menu_width"
            app:expandedMenuWidth="@dimen/expanded_menu_width"
            app:stateMenu="close">

            <com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerView_
                android:id="@+id/mdvMenu_AH"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:elevation="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_empty_content" />

                <!-- Need commit fragments with white background-->
                <FrameLayout
                    android:id="@+id/flContentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerContainer_>
    </FrameLayout>
</LinearLayout>