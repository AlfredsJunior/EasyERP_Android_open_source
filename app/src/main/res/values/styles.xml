<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/AppTheme.DefaultBlackTextTheme</item>
        <item name="editTextStyle">@style/AppTheme.DefaultBlackEditTextTheme</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.DefaultBlackTextTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.DefaultBlackEditTextTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>
    </style>

    <style name="AppTheme.InputFields">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/text_grey_hint_color</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="theme">@style/AppTheme.InputFields</item>
    </style>

    <style name="AppTheme.LeadTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="hintAnimationEnabled">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.LeadInputFieldStyle" parent="AppTheme.DefaultBlackEditTextTheme">
        <item name="android:focusable">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.FilterDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:windowTitleStyle">@style/AppTheme.FilterDialog.TitleStyle</item>
        <item name="editTextStyle">@style/AppTheme.FilterDialog.SearchFieldStyle</item>
    </style>

    <style name="AppTheme.FilterDialog.SearchFieldStyle" parent="AppTheme.LeadInputFieldStyle">
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FilterDialog.TitleStyle" parent="android:Widget.TextView">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

</resources>
