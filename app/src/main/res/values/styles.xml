<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/AppTheme.DefaultBlackTextTheme</item>
        <item name="editTextStyle">@style/AppTheme.DefaultBlackEditTextTheme</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DefaultBlackTextTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.DefaultBlackEditTextTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>
    </style>

    <style name="AppTheme.InputFields">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/text_grey_hint_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="theme">@style/AppTheme.InputFields</item>
    </style>

</resources>
