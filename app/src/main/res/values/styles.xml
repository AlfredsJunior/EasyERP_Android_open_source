<resources>

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/DefaultTheme.DefaultBlackTextTheme</item>
        <item name="editTextStyle">@style/DefaultTheme.DefaultBlackEditTextTheme</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="DefaultTheme.ButtonLight">
        <item name="colorButtonNormal">@color/colorVintage</item>
    </style>

    <style name="DefaultTheme.ButtonNight">
        <item name="colorButtonNormal">@color/colorSuzy</item>
    </style>

    <style name="DefaultTheme.ThemeHistory" parent="DefaultTheme">
        <item name="colorControlHighlight">@color/color_ripple</item>
    </style>

    <style name="DefaultTheme.DefaultBlackTextTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultTheme.DefaultBlackEditTextTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>
    </style>

    <style name="DefaultTheme.InputFields">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>
        <item name="colorControlNormal">@color/text_grey_hint_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="DefaultTheme.InputFieldsLight">
        <item name="android:textColor">@color/white_main_text_color</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorControlNormal">@color/dividerColor</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyleLight">
        <item name="theme">@style/DefaultTheme.InputFieldsLight</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="theme">@style/DefaultTheme.InputFields</item>
    </style>

    <style name="DefaultTheme.LeadTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="hintAnimationEnabled">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/color_text_gray</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="DefaultTheme.LeadInputFieldStyle" parent="DefaultTheme.DefaultBlackEditTextTheme">
        <item name="android:focusable">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/color_divider</item>
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="ContentTitleStyle" parent="@style/RobotoMedium">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/default_padding_3dp</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
    </style>

    <!-- Fonts-->
    <style name="RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoBold">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoCondensedBold">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoCondensedRegular">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextHeaderTableProductStyle" parent="RobotoBold">
        <item name="android:textSize">@dimen/text_size_table_12</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/default_padding_quart</item>
    </style>

    <style name="TextTableProductStyle" parent="RobotoBold">
        <item name="android:textSize">@dimen/text_size_table_12</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/default_padding_quart</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ChartValueTextStyle" parent="RobotoLight">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:paddingLeft">@dimen/default_padding_quart</item>
        <item name="android:paddingRight">@dimen/default_padding_quart</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Dialogs Styles -->
    <style name="DefaultTheme.NoTitleDialogWithAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">
            @style/DefaultTheme.NoTitleDialogWithAnimation.ScaleWindowAnimation
        </item>
    </style>

    <style name="DefaultTheme.NoTitleDialogWithAnimation.ScaleWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="DefaultTheme.FilterDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="editTextStyle">@style/SearchFieldStyle</item>
    </style>

    <style name="SearchFieldStyle">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding_half</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:background">@drawable/bg_search_view_selector</item>
        <item name="android:hint">@string/list_searchview_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:searchSuggestThreshold">2</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">flagNoExtractUi|</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!--Close button icon -->
        <item name="closeIcon">@drawable/ic_close_white</item>
        <!--Search button icon -->
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="queryHint">@string/list_searchview_hint</item>
        <item name="android:maxWidth">10000dp</item>
    </style>

    <style name="DropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <!--My the best of the best styles-->
    <style name="TextListTitleStyle" parent="RobotoCondensedBold">
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="TextListTitleRegularStyle" parent="RobotoRegular">
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="TextListInfoStyle" parent="RobotoRegular">
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextListInfoGreyStyle" parent="RobotoRegular">
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
        <item name="android:textColor">@color/color_text_gray</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLargeTitleStyle" parent="RobotoCondensedBold">
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="TextLargeInfoStyle" parent="RobotoCondensedRegular">
        <item name="android:textSize">@dimen/text_size_big_24</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="TextContentTitle" parent="RobotoCondensedBold">
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:paddingStart">@dimen/default_padding_3dp</item>
        <item name="android:layout_marginTop">@dimen/default_padding_big</item>
    </style>

    <style name="TextUrlStyle" parent="RobotoMedium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_small_14</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextNoDataStyle" parent="RobotoRegular">
        <item name="android:text">@string/no_data</item>
        <item name="android:textColor">@color/color_text_gray</item>
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextNoDataStyle.Attachments">
        <item name="android:text">@string/no_attachments</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/color_text_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_small_14</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="CustomCheckBoxStyle" >
        <item name="android:theme">@style/CustomCheckBox</item>
        <item name="android:textSize">@dimen/text_size_small_14</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SmallChipsStyle" parent="RobotoMedium">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/default_padding_half</item>
        <item name="android:paddingLeft">@dimen/default_padding_half</item>
        <item name="android:paddingTop">@dimen/default_padding_quart</item>
        <item name="android:paddingBottom">@dimen/default_padding_quart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumChipsStyle" parent="RobotoMedium">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">@dimen/default_padding_half</item>
        <item name="android:paddingLeft">@dimen/default_padding_half</item>
        <item name="android:paddingTop">@dimen/default_padding_quart</item>
        <item name="android:paddingBottom">@dimen/default_padding_quart</item>
        <item name="android:layout_marginLeft">@dimen/default_padding_quart</item>
        <item name="android:layout_marginRight">@dimen/default_padding_quart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDetailsTitleStyle" parent="RobotoMedium">
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="TextContactNameCard" parent="RobotoCondensedBold">
        <item name="android:textSize">@dimen/text_list_item_medium_16</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextContactInfoStyle" parent="RobotoRegular">
        <item name="android:textSize">@dimen/text_size_small_14</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PdfStyle" parent="@style/RobotoCondensedRegular">
        <item name="android:textSize">@dimen/text_size_table_12</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="PdfStyle.BoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PdfStyle.BoldText.WorkflowStyle">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/default_padding_quart</item>
        <item name="android:paddingBottom">@dimen/default_padding_quart</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="PdfStyle.FieldTitleStyle">
        <item name="android:textColor">@color/color_text_gray</item>
    </style>

    <style name="PdfStyle.TableStyle">
        <item name="android:padding">@dimen/default_padding_quart</item>
    </style>

    <style name="PdfStyle.TableStyle.Header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentTitle.WithoutPadding">
        <item name="android:paddingStart">0dp</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
    </style>


</resources>
