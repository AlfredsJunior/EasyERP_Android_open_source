<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:textViewStyle">@style/AppTheme.DefaultBlackTextTheme</item>
        <item name="editTextStyle">@style/AppTheme.DefaultBlackEditTextTheme</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.ThemeHistory" parent="AppTheme">
        <item name="android:colorControlHighlight">@color/color_ripple</item>
    </style>

    <style name="AppTheme.DefaultBlackTextTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.DefaultBlackEditTextTheme" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/text_grey_hint_color</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.InputFields">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/text_grey_hint_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="theme">@style/AppTheme.InputFields</item>
    </style>

    <style name="AppTheme.LeadTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="hintAnimationEnabled">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/color_text_gray</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AppTheme.LeadInputFieldStyle" parent="AppTheme.DefaultBlackEditTextTheme">
        <item name="android:focusable">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/color_divider</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small_14</item>
    </style>

    <style name="ContentTitleStyle" parent="@style/RobotoMedium">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/default_padding_3dp</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:textSize">@dimen/text_list_item_large_20</item>
    </style>

    <!-- Fonts-->
    <style name="RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="RobotoBold">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RobotoCondensedBold">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RobotoCondensedRegular">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="AppTheme.FilterDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="editTextStyle">@style/AppTheme.FilterDialog.SearchFieldStyle</item>
    </style>

    <style name="AppTheme.FilterDialog.SearchFieldStyle" parent="AppTheme.LeadInputFieldStyle">
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

</resources>
