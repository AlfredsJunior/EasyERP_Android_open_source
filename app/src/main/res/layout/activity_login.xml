<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rvContainer_AL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login_screen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_splash_white_trapeze" />

    <ImageView
        android:id="@+id/ivAppIcon_AL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_erp"
        tools:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llInput_AL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:minWidth="@dimen/login_min_width_form_credentials"
        android:orientation="vertical"
        android:paddingTop="170dp"
        android:visibility="invisible"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLogin_AL"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etLogin_AL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_username"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword_AL"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword_AL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDbId_AL"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etDbId_AL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_database_id"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin_AL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:text="@string/login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnDemoMode_AL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo"
            android:layout_marginTop="@dimen/default_padding_half"/>

    </LinearLayout>

</RelativeLayout>
