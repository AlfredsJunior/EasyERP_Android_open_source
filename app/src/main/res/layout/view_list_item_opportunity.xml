<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/flOpportunityItemContainer_VLIO"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_with_bottom_divider_line_selector"
              android:orientation="vertical"
              android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOpportunityName_VLIO"
            style="@style/RobotoMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/no_data"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_extra_large_24"
            tools:text="Sajid Ghafoor" />

        <TextView
            android:id="@+id/tvStage_LIL"
            style="@style/RobotoRegular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:text="@string/no_data"
            android:textSize="@dimen/text_list_item_medium_16"
            android:layout_weight="1"
            tools:text="test3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_large_45">

        <TextView
            android:id="@+id/tvAssignedTo_VLIO"
            style="@style/RobotoRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/no_data"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_medium_16"
            tools:text="Alex Hoshylyk"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvRevenue_VLIO"
            style="@style/RobotoRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/no_data"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_medium_16"
            tools:text="15000 $" />

    </LinearLayout>

</LinearLayout>

