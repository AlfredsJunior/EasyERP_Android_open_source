<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_with_bottom_divider_line_selector"
              android:orientation="vertical"
              android:padding="@dimen/default_padding"
              tools:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/llFirstLine_VLIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStage_VLIO"
            style="@style/SmallChipsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/default_padding_middle"
            android:layout_marginTop="@dimen/default_padding_3dp"
            tools:text="Not Interested"/>

        <TextView
            android:id="@+id/tvOpportunityName_VLIO"
            style="@style/TextListTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvStage_VLIO"
            tools:text="Web developmentsdsdsd"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_quart"
        android:layout_marginBottom="@dimen/default_padding_quart"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAssignedTo_VLIO"
            style="@style/TextListInfoStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Alex Hoshylyk"/>

        <TextView
            android:id="@+id/tvRevenue_VLIO"
            style="@style/RobotoCondensedBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_medium_16"
            tools:text="$ 200.12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvEditedBy_VLIO"
        style="@style/TextListInfoGreyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Last Edited: Today, at 2:45 PM by Test Admin"/>

</LinearLayout>

