<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlRefresh_FLD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsvContent_FLD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNameLead_FLD"
                            style="@style/RobotoMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingEnd="@dimen/default_padding"
                            android:paddingStart="@dimen/default_padding"
                            android:paddingTop="@dimen/default_padding"
                            android:text="@string/no_data"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_list_item_extra_large_24"
                            tools:text="Web development"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/default_padding"
                            android:background="@color/color_divider"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/default_padding"
                            android:paddingStart="@dimen/default_padding">

                            <TextView
                                style="@style/ContentTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCurrentStatus_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/current_status"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCloseDate_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/close_date"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvAssignedTo_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/assigned_to"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvPriority_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/priority"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvSource_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/source"/>

                                </android.support.design.widget.TextInputLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"/>

                            </LinearLayout>


                            <TextView
                                style="@style/ContentTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contacts"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding_half">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvPersonName_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/contact_person"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvFirstName_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/first_name"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvLastName_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/last_name"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvJobPosition_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/job_position"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvDob_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/date_of_birth"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvEmail_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/email"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvPhone_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/phone"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvSkype_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/skype"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvLinkedIn_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/linkedin"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvFacebook_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/facebook"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <TextView
                                style="@style/ContentTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding_half">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyName_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/name"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyStreet_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/street"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyCity_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/hint_city"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyState_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/state"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyZipcode_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/zip"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    style="@style/AppTheme.LeadTextInputLayoutStyle">

                                    <EditText
                                        android:id="@+id/tvCompanyCountry_FLD"
                                        style="@style/AppTheme.LeadInputFieldStyle"
                                        android:hint="@string/country"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <TextView
                                style="@style/ContentTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tags"/>

                            <TextView
                                android:id="@+id/tvTags_FLD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="@dimen/default_padding_half"
                                android:layout_marginTop="@dimen/default_padding_half"
                                android:text="@string/no_tags"
                                android:maxLines="5"
                                android:paddingEnd="@dimen/default_padding"
                                android:paddingStart="@dimen/default_padding"
                                android:paddingBottom="@dimen/default_padding_half"
                                android:layout_marginBottom="@dimen/default_padding_3dp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/ContentTitleStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/attachments"/>

                                <LinearLayout
                                    android:id="@+id/llAttachmentsContainer_FLD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/default_padding"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvAttachments_FLD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/default_padding_half"
                                        android:alpha="0.83"
                                        android:drawablePadding="@dimen/default_padding_half"
                                        android:lineSpacingExtra="@dimen/tag_line_spacing_default"
                                        android:text="@string/no_attachments"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <RelativeLayout
                android:id="@+id/btnHistory_FLD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_grey_transparent"
                android:padding="@dimen/default_padding">


                <TextView
                    style="@style/RobotoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/notes_amp_timeline"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_large_20"/>

                <ImageView
                    android:id="@+id/ivIconArrow_FLD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:tint="@android:color/black"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_arrow_up"/>

            </RelativeLayout>

            <View
                android:id="@+id/viewHistoryDivider_FLD"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvHistory_FLD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>