<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vpTutorial_AT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            style="@style/WhiteButtonStyle"
            android:id="@+id/btnLogin_AT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ciTutorial_AT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:ci_width="13dp"
            app:ci_height="13dp"
            app:ci_orientation="horizontal"
            app:ci_margin="6dp"
            app:ci_animator="@animator/alpha"
            app:ci_drawable_unselected="@drawable/view_pager_indicator"
            app:ci_drawable="@drawable/view_pager_indicator_selected"
            android:layout_weight="1"/>

        <TextView
            style="@style/WhiteButtonStyle"
            android:id="@+id/btnDemo_AT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo"/>

    </LinearLayout>

</LinearLayout>