<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsvContent_FSRD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_FSRD"
            style="@style/TextDetailsTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_bottom_divider_line"
            android:padding="@dimen/default_padding"
            tools:text="Web development" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/received_by">

                    <EditText
                        android:id="@+id/etReceivedBy_FSRD"
                        style="@style/DefaultTheme.LeadInputFieldStyle"
                        android:text="@string/err_not_specified" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_date">

                    <EditText
                        android:id="@+id/etDate_FSRD"
                        style="@style/DefaultTheme.LeadInputFieldStyle"
                        android:text="@string/err_not_specified" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_padding_half"
                android:layout_marginStart="@dimen/default_padding_half"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_round_grey"
                android:padding="@dimen/default_padding_middle">

                <TextView
                    android:id="@+id/tvDescription_FSRD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="Duis hendrerit ac nisl eget bibendum. Fusce euismod velit turpis, id scelerisque nibh consequat eu. Nulla facilisi. Maecenas et imperdiet diam. Morbi posuere tellus vel sollicitudin pharetra. Aliquam erat volutpat. Aenean et quam eget tortor consequat fermentum. Ut et congue lacus, bibendum bibendum est. Maecenas quis porttitor lorem, vel vehicula mauris. Proin vel sem dui. Sed vulputate urna et facilisis tempus. Morbi ipsum ligula, placerat vitae lacinia in, placerat id mauris." />

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_dimen_32"
                android:paddingTop="@dimen/default_dimen_32">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:baselineAligned="false"
                    android:padding="@dimen/default_padding">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCompanyName_FSRD"
                            style="@style/PdfStyle.BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="16sp"
                            android:textColor="@color/color_text_black"
                            tools:text="EasyERP Inc" />

                        <TextView
                            android:id="@+id/tvCompanyAddress_FSRD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/color_text_black"
                            tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            style="@style/RobotoLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock Return"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_sixe_pdf_type" />

                        <TextView
                            android:id="@+id/tvName_FSRD"
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_gray"
                            tools:text="SO_30" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/PdfStyle.FieldTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details_bill_to" />

                    <TextView
                        android:id="@+id/tvSupplierName_FSRD"
                        style="@style/PdfStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        tools:text="Adrian Trif" />

                    <TextView
                        android:id="@+id/tvSupplierAddress_FSRD"
                        style="@style/PdfStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Transcarpation, 88000, Ukraine, Uzhhorod, 47 Shandora Petefi sq., 7th floor," />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="@dimen/default_padding_big"
                    android:background="@color/color_bg_header_table_product"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_product_number" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item name" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/item_product_sku" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Cost" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Goods Note" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Warehouse" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="@string/item_product_qty" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProductList_FSRD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
