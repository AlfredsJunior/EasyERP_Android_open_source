<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@android:color/white">

    <TextView
        android:id="@+id/tvChannel_VICH"
        style="@style/TextDetailsTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_with_bottom_divider_line"
        android:padding="@dimen/default_padding"
        tools:text="Magento Channel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding_half"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_middle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrders_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/orders"
                    android:textColor="@color/color_text_gray" />

                <TextView
                    android:id="@+id/tvOrdersValue_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_large_18"
                    tools:text="2048" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding_half"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_middle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConflictedProducts_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/conflicted_products"
                    android:textColor="@color/color_text_gray" />

                <TextView
                    android:id="@+id/tvConflictedProductsValue_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_large_18"
                    tools:text="1024" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding_half"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_middle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvListing_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/listing"
                    android:textColor="@color/color_text_gray" />

                <TextView
                    android:id="@+id/tvListingValue_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_large_18"
                    tools:text="2048" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding_half"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_middle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUnlinkedOrders_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/unlinked_orders"
                    android:textColor="@color/color_text_gray" />

                <TextView
                    android:id="@+id/tvUnlinkedOrdersValue_VICH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_large_18"
                    tools:text="2048" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>