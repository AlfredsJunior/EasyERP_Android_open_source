<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContainerLogIn_VIFL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLogin_VIFL"
            android:layout_width="@dimen/login_icons_size"
            android:layout_height="@dimen/login_icons_size"
            android:layout_marginTop="@dimen/default_padding_big"
            app:srcCompat="@drawable/ic_login_grey" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLogin_VIFL"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding_middle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etLogin_VIFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_username_or_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/color_text_black" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_half"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPassword_VIFL"
            android:layout_width="@dimen/login_icons_size"
            android:layout_height="@dimen/login_icons_size"
            android:layout_marginTop="@dimen/default_padding_big"
            app:srcCompat="@drawable/ic_password_grey" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword_VIFL"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding_middle"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/selector_color_password_toggle">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassword_VIFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textColor="@color/color_text_black" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvForgotPassword_VIFL"
        style="@style/RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/default_padding_half"
        android:padding="@dimen/default_padding_small"
        android:text="@string/forgot_password_question"
        android:textColor="@color/colorAccent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnLogin_VIFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding"
        android:text="@string/login" />

</LinearLayout>