<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/default_padding"
    android:layout_marginStart="@dimen/default_padding"
    android:layout_marginTop="@dimen/default_padding"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_big"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEmployeeImage_VLIVP"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:scaleType="centerCrop"
            tools:background="@color/color_chips_green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_padding_middle"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEmployeeName_VLIVP"
                style="@style/TextListTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                tools:text="Bradley Douglas" />

            <TextView
                android:id="@+id/tvEmployeePosition_VLIVP"
                style="@style/TextListInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_padding_quart"
                tools:text="Junior Software Developer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_big"
                android:orientation="vertical">

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="Working:" />

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="On Leave:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_half"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWorkingCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="23" />

                <TextView
                    android:id="@+id/tvOnLeaveCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_big"
                android:orientation="vertical">

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="Vacation:" />

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="Personal:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_half"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVacationCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="23" />

                <TextView
                    android:id="@+id/tvPersonalCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_big"
                android:orientation="vertical">

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="Sick:" />

                <TextView
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:text="Education:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_padding_half"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSickCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="23" />

                <TextView
                    android:id="@+id/tvEducationCount_VLIVP"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_padding_quart"
                    android:textStyle="bold"
                    tools:text="4" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>