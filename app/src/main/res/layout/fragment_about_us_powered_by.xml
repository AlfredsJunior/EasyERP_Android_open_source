<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="@dimen/default_padding_big"
            android:src="@drawable/ic_thinkmobiles_logo" />

        <TextView
            android:id="@+id/tvDescription_FAUPB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_quart"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_padding_half"
            tools:text="@string/thinkmobiles_description" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnVisitUs_FAUPB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half"
            android:text="@string/visit_us" />
    </LinearLayout>
</ScrollView>