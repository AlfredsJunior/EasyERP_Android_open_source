<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsvContent_FGOND"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_FGOND"
            style="@style/TextDetailsTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_bottom_divider_line"
            android:padding="@dimen/default_padding"
            tools:text="Web development" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPrinted_FGOND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:text="@string/printed"
                        android:textColor="@color/color_text_black"
                        tools:drawableLeft="@drawable/ic_print" />

                    <TextView
                        android:id="@+id/tvPrintedDate_FGOND"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:textColor="@color/color_text_black"
                        tools:text="07 Mar, 2017 10:59 AM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPicked_FGOND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:text="@string/picked"
                        android:textColor="@color/color_text_black"
                        tools:drawableLeft="@drawable/ic_print" />

                    <TextView
                        android:id="@+id/tvPickedDate_FGOND"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:textColor="@color/color_text_black"
                        tools:text="07 Mar, 2017 10:59 AM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPacked_FGOND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:text="@string/packed"
                        android:textColor="@color/color_text_black"
                        tools:drawableLeft="@drawable/ic_print" />

                    <TextView
                        android:id="@+id/tvPackedDate_FGOND"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:textColor="@color/color_text_black"
                        tools:text="07 Mar, 2017 10:59 AM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvShipped_FGOND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:text="@string/shipped"
                        android:textColor="@color/color_text_black"
                        tools:drawableLeft="@drawable/ic_print" />

                    <TextView
                        android:id="@+id/tvShippedDate_FGOND"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding_quart"
                        android:gravity="center"
                        android:textColor="@color/color_text_black"
                        tools:text="07 Mar, 2017 10:59 AM" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding">

            <android.support.design.widget.TextInputLayout
                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                android:layout_marginEnd="@dimen/default_padding_half"
                android:hint="@string/hint_date">

                <EditText
                    android:id="@+id/etDate_FGOND"
                    style="@style/DefaultTheme.LeadInputFieldStyle"
                    android:text="@string/err_not_specified" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                android:layout_marginStart="@dimen/default_padding_half"
                android:hint="@string/tracking_reference">

                <EditText
                    android:id="@+id/etTrackingReference_FGOND"
                    style="@style/DefaultTheme.LeadInputFieldStyle"
                    android:text="@string/err_not_specified" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding">

            <android.support.design.widget.TextInputLayout
                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                android:layout_marginEnd="@dimen/default_padding_half"
                android:hint="@string/shipping_method">

                <EditText
                    android:id="@+id/etShippingMethod_FGOND"
                    style="@style/DefaultTheme.LeadInputFieldStyle"
                    android:text="@string/err_not_specified" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_half"
                android:layout_weight="1" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_dimen_32"
                android:paddingTop="@dimen/default_dimen_32">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:baselineAligned="false"
                    android:padding="@dimen/default_padding">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCompanyName_FGOND"
                            style="@style/PdfStyle.BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="16sp"
                            android:textColor="@color/color_text_black"
                            tools:text="EasyERP Inc" />

                        <TextView
                            android:id="@+id/tvCompanyAddress_FGOND"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/color_text_black"
                            tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            style="@style/RobotoLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Note"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_sixe_pdf_type" />

                        <TextView
                            android:id="@+id/tvName_FGOND"
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_gray"
                            tools:text="SO_30" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PdfStyle.FieldTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_details_bill_to" />

                    <TextView
                        android:id="@+id/tvSupplierName_FGOND"
                        style="@style/PdfStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        tools:text="Adrian Trif" />

                    <TextView
                        android:id="@+id/tvSupplierAddress_FGOND"
                        style="@style/PdfStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Transcarpation, 88000, Ukraine, Uzhhorod, 47 Shandora Petefi sq., 7th floor," />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="@dimen/default_padding_big"
                    android:background="@color/color_bg_header_table_product"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_product_number" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Item name" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/item_product_sku" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Location" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="Shipped" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="This shipment" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="To Follow" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProductList_FGOND"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
