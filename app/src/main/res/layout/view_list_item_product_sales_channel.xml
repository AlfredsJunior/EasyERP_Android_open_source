<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding_quart">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5">

        <ImageView
            android:id="@+id/ivChannelLogo_LIPSC"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvChannelName_LIPSC"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:textColor="@color/color_text_black" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            style="@style/ProductTableTextStyle.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:text="Published"/>

        <ImageView
            android:id="@+id/ivChannelPublished_LIPSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_allocated" />

    </FrameLayout>


</LinearLayout>