<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_with_bottom_divider_line_selector"
    android:padding="@dimen/default_padding_middle">

    <ImageView
        android:id="@+id/ivPersonImage_VLIP"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/ivPersonImage_VLIP"
        android:layout_marginLeft="10dp">
        
        <TextView
            android:id="@+id/tvPersonName_VLIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="First Last"/>

        <TextView
            android:id="@+id/tvPersonCountry_VLIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="Ukraine"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/ivPersonImage_VLIP"
        android:layout_toEndOf="@+id/ivPersonImage_VLIP">

        <TextView
            android:id="@+id/tvPersonEmail_VLIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="test@test.com"/>

        <TextView
            android:id="@+id/tvPersonPhone_VLIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="80502312123"/>

    </LinearLayout>

</RelativeLayout>