<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_with_bottom_divider_line_selector"
             tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding">

        <ImageView
            android:id="@+id/ivPersonImage_VLIP"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPersonName_VLIP"
                    style="@style/RobotoCondensedBold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_list_item_medium_16"
                    tools:text="Bradley Douglas"/>

                <TextView
                    android:id="@+id/tvPersonCountry_VLIP"
                    style="@style/RobotoRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_small_14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="@dimen/default_padding_half"
                    android:paddingTop="2dp"
                    tools:text="United States"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPersonEmail_VLIP"
                style="@style/RobotoRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_small"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_small_14"
                tools:text="smith@diagnext.com"/>

            <TextView
                style="@style/RobotoRegular"
                android:id="@+id/tvPersonPhone_VLIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_black"
                android:textSize="@dimen/text_size_small_14"
                android:layout_marginTop="@dimen/default_padding_3dp"
                tools:text="80502312123"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>