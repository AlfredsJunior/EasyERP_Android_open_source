<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_include_toolbar" />

    <com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerContainer_
        android:id="@+id/mdvMenuContainer_AH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:collapsedMenuWidth="@dimen/collapsed_menu_width"
        app:expandedMenuWidth="@dimen/expanded_menu_width"
        app:stateMenu="close">

        <com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerView_
            android:id="@+id/mdvMenu_AH"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:elevation="5dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_empty_content" />

                <!-- Need commit fragments with white background-->
                <FrameLayout
                    android:id="@+id/flContentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_empty_content" />

                <!-- Need commit fragments with white background-->
                <FrameLayout
                    android:id="@+id/flContentDetailContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>
        </LinearLayout>

    </com.thinkmobiles.easyerp.presentation.custom.views.drawer_menu.MenuDrawerContainer_>

</LinearLayout>