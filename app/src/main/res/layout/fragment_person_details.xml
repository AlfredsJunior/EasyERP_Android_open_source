<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlRefresh_FPD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsvContent_FPD"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About "
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/tvAboutName_FPD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        tools:text="Basim"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPersonAvatar_FPD"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp">

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etFirstName_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="First Name"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etLastName_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="Last Name"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etJobPosition_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Job position"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etEmail_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Email"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etSkype_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Skype"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etPhone_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Phone"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etLinkedIn_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Linked In"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etMobile_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Mobile"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etFacebook_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Facebook"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etDateOfBirth_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Date of Birth"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSkype_FPD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_skype"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ivLinkedIn_FPD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_linkedin"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ivFacebook_FPD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_facebook"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:text="Billing address"
                    android:textColor="#bdbdbd"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etBillingStreet_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Street"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etBillingState_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="State"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etBillingCity_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="City"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etBillingCountry_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Country"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etBillingZipcode_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Zip code"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:text="Shipping address"
                    android:textColor="#bdbdbd"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etShippingFullName_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="Full Name"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/AppTheme.LeadTextInputLayoutStyle">

                        <EditText
                            android:id="@+id/etShippingState_FPD"
                            style="@style/AppTheme.LeadInputFieldStyle"
                            android:hint="State"/>

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etShippingStreet_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="Street"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etShippingCity_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="City"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etShippingCountry_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="Country"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/AppTheme.LeadTextInputLayoutStyle">

                            <EditText
                                android:id="@+id/etShippingZipcode_FPD"
                                style="@style/AppTheme.LeadInputFieldStyle"
                                android:hint="Zip code"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/default_padding"
                        android:text="Company"
                        android:textColor="#bdbdbd"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btnHistory_FPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:elevation="3dp"
                android:padding="@dimen/default_padding">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="History"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivIconArrow_FPD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:tint="@android:color/black"
                    app:srcCompat="@drawable/ic_arrow_up"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvHistory_FPD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>