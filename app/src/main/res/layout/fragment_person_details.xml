<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvContent_FPD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPersonAvatar_FPD"
                        android:layout_width="@dimen/image_size_large"
                        android:layout_height="@dimen/image_size_large"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPersonName_FPD"
                            style="@style/TextLargeTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Bradley	Douglas" />

                        <TextView
                            android:id="@+id/tvJobPosition_FPD"
                            style="@style/TextLargeInfoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding_small"
                            tools:text="Program Leader" />

                        <TextView
                            android:id="@+id/tvCompanyName_FPD"
                            style="@style/TextLargeInfoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding_quart"
                            tools:text="PricewaterhouseCoopers Corp." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivFacebook_FPD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_fb"
                                tools:visibility="visible" />

                            <ImageView
                                android:id="@+id/ivLinkedIn_FPD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_linkedin"
                                tools:visibility="visible" />

                            <ImageView
                                android:id="@+id/ivSkype_FPD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_skype"
                                tools:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etEmail_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/email" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etSkype_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/skype" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etLinkedIn_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/linkedin" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etFacebook_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/facebook" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etPhone_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/phone" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etMobile_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/mobile" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etDateOfBirth_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/date_of_birth" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_padding_half"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/billing_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etBillingStreet_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/street" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etBillingCity_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/hint_city" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etBillingState_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/state" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etBillingZipcode_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/zip" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etBillingCountry_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/country" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_half"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingFullName_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/full_name" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingStreet_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/street" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingCity_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/hint_city" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingState_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/state" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingZipcode_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/zip" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etShippingCountry_FPD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/country" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sales_amp_purchases" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvEmptySalesANdPurchases_FPD"
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_3dp"
                        android:layout_marginTop="@dimen/default_padding" />

                    <LinearLayout
                        android:id="@+id/llContainerSalesPurchases_FPD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesReference_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/reference" />

                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/RobotoRegular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_medium"
                                    android:text="@string/contractor_type"
                                    android:textColor="@color/color_text_gray"
                                    android:textSize="@dimen/small_text_size" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_quart"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/cbIsCustomer_FPD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/customer"
                                        android:textColor="@color/text_grey_hint_color"
                                        android:theme="@style/CustomCheckBox"
                                        tools:checked="true" />

                                    <CheckBox
                                        android:id="@+id/cbIsSupplier_FPD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/default_padding_half"
                                        android:text="@string/supplier"
                                        android:textColor="@color/text_grey_hint_color"
                                        android:theme="@style/CustomCheckBox"
                                        tools:checked="false" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesTeam_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/sales_team" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesPerson_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/sales_person" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesImplementedBy_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/implemented_by" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesLanguage_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/language" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvEmptyCompany_FPD"
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_3dp"
                        android:layout_marginTop="@dimen/default_padding" />

                    <LinearLayout
                        android:id="@+id/llCompanyContainer_FPD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/default_padding">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_padding_half"
                                android:layout_marginStart="@dimen/default_padding_3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/image_size_large"
                                    android:layout_height="@dimen/image_size_large">

                                    <ImageView
                                        android:id="@+id/ivCompanyImage_FPD"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop" />

                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/tvCompanyTitleUrl_FPD"
                                    style="@style/TextUrlStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_small"
                                    tools:text="www.google.com" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    <EditText
                                        android:id="@+id/etCompanyName_FPD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:hint="@string/name" />

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    <EditText
                                        android:id="@+id/etCompanyStreet_FPD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:hint="@string/street" />

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    <EditText
                                        android:id="@+id/etCompanyCity_FPD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:hint="@string/hint_city" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etCompanyState_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/state" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etCompanyZipcode_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/zip" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etCompanyPhone_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/phone" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etCompanyCountry_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/country" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etCompanyEmail_FPD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/email" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/leads_amp_opportunities" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/default_padding_half"
                android:paddingStart="@dimen/default_padding_half">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvLeadsAndOpportunities_FPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/tvEmptyLeadsAndOpportunities_FPD"
                    style="@style/TextNoDataStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_3dp"
                    android:paddingEnd="@dimen/default_padding_half"
                    android:paddingStart="@dimen/default_padding_half"
                    android:paddingTop="@dimen/default_padding" />

            </FrameLayout>

            <TextView
                style="@style/TextContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="@dimen/default_padding"
                android:text="@string/attachments" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEmptyAttachments_FPD"
                    style="@style/TextNoDataStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_3dp"
                    android:padding="@dimen/default_padding" />

                <LinearLayout
                    android:id="@+id/llAttachmentsContainer_FPD"
                    android:layout_width="match_parent"
