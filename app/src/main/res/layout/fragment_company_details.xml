<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvContent_FCD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCompanyAvatar_FCD"
                        android:layout_width="@dimen/image_size_large"
                        android:layout_height="@dimen/image_size_large"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCompanyName_FCD"
                            style="@style/TextLargeTitleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Pricewaterhouse Coopers"/>

                        <TextView
                            android:id="@+id/tvCompanyWebsite_FCD"
                            style="@style/TextUrlStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding_small"
                            android:textSize="@dimen/text_size_big_24"
                            tools:text="yahoo.com"/>

                        <TextView
                            android:id="@+id/tvEmail_FPD"
                            style="@style/TextLargeInfoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding_quart"
                            tools:text="PricewaterhouseCoopers Corp."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivCompanyFb_FCD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_fb"
                                tools:visibility="visible"/>

                            <ImageView
                                android:id="@+id/ivCompanyLinkedIn_FCD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_linkedin"
                                tools:visibility="visible"/>

                            <ImageView
                                android:id="@+id/ivCompanySkype_FCD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_padding_half"
                                android:visibility="gone"
                                app:srcCompat="@drawable/icon_skype"
                                tools:visibility="visible"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etLinkedIn_FCD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/linkedin"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etFacebook_FCD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/facebook"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etPhone_FCD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/phone"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etMobile_FCD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/mobile"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half">

                        <EditText
                            android:id="@+id/etAssignedTo_FCD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:hint="@string/assigned_to"/>

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/default_padding_half"
                        android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/billing_address"/>

                <TextView
                    android:id="@+id/tvEmptyBillingAddress_FPD"
                    style="@style/TextNoDataStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_3dp"
                    android:layout_marginTop="@dimen/default_padding"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/llContainerBillingAddress_FCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etBillingStreet_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/street"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginStart="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etBillingCity_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/hint_city"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etBillingState_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/state"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginStart="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etBillingZip_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/zip"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etBillingCountry_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/country"/>

                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_padding_half"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shipping_address"/>

                <TextView
                    android:id="@+id/tvEmptyShippingAddress_FPD"
                    style="@style/TextNoDataStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_3dp"
                    android:layout_marginTop="@dimen/default_padding"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/llContainerShippingAddress_FDC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingFullname_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/full_name"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginStart="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingStreet_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/street"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingCity_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/hint_city"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginStart="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingState_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/state"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginEnd="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingZip_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/zip"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                            android:layout_marginStart="@dimen/default_padding_half">

                            <EditText
                                android:id="@+id/etShippingCountry_FCD"
                                style="@style/DefaultTheme.LeadInputFieldStyle"
                                android:hint="@string/country"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sales_amp_purchases"/>

                    <TextView
                        android:id="@+id/tvEmptySalesAndPurchases_FPD"
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_3dp"
                        android:layout_marginTop="@dimen/default_padding"
                        tools:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/llContainerSalesPurchases_FPD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etReference_FCD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/reference"/>

                            </android.support.design.widget.TextInputLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/RobotoRegular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_medium"
                                    android:text="@string/contractor_type"
                                    android:textColor="@color/color_text_gray"
                                    android:textSize="@dimen/small_text_size"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_quart"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/cbIsCustomer_FCD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/customer"
                                        android:textColor="@color/text_grey_hint_color"
                                        android:theme="@style/CustomCheckBox"
                                        tools:checked="true"/>

                                    <CheckBox
                                        android:id="@+id/cbIsSupplier_FCD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/default_padding_half"
                                        android:text="@string/supplier"
                                        android:textColor="@color/text_grey_hint_color"
                                        android:theme="@style/CustomCheckBox"
                                        tools:checked="false"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesTeam_FCD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/sales_team"/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etSalesPerson_FCD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/sales_person"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etImplementedBy_FCD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/implemented_by"/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half">

                                <EditText
                                    android:id="@+id/etLanguage_FCD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:hint="@string/language"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/TextContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:text="@string/contacts"/>

            <TextView
                android:id="@+id/tvEmptyContacts_FPD"
                style="@style/TextNoDataStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_fixed"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_padding"
                tools:visibility="visible"/>

            <FrameLayout
                android:id="@+id/flContainerContacts_FCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/default_padding_half"
                android:paddingStart="@dimen/default_padding_half">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvContacts_FCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

            </FrameLayout>

            <TextView
                style="@style/TextContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:text="@string/leads_amp_opportunities"/>

            <TextView
                android:id="@+id/tvEmptyLeadsAndOpportunities_FCD"
                style="@style/TextNoDataStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_fixed"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_padding"/>

            <FrameLayout
                android:id="@+id/flContainerLeadsAndOpportunities_FCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/default_padding_half"
                android:paddingStart="@dimen/default_padding_half">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvLeadsAndOpportunities_FCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

            </FrameLayout>

            <TextView
                style="@style/TextContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:text="@string/attachments"/>

            <TextView
                android:id="@+id/tvEmptyAttachments_FCD"
                style="@style/TextNoDataStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding_fixed"
                android:layout_marginTop="@dimen/default_padding"/>

            <FrameLayout
                android:id="@+id/flContainerAttachments_FCD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginEnd="@dimen/default_padding">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAttachments_FCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/view_bottom_history"/>

</LinearLayout>