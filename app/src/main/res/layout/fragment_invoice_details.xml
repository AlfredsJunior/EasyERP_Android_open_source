<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlRefresh_FID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsvContent_FID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">


                    <TextView
                        android:id="@+id/tvInvoiceStatus_FID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginStart="@dimen/default_padding"
                        android:elevation="3dp"
                        android:minWidth="120dp"
                        android:padding="@dimen/default_padding_small"
                        android:background="@drawable/bg_order_status"
                        android:gravity="center"
                        tools:text="Draft/ Quotation" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/default_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/white"
                                android:orientation="vertical"
                                android:padding="@dimen/default_padding">

                                    <TextView
                                        android:id="@+id/tvCompanyName_FID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="80dp"
                                        android:textStyle="bold"
                                        tools:text="EasyERP Inc" />

                                    <TextView
                                        android:id="@+id/tvCompanyAddress_FID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:textAllCaps="true"
                                        android:textSize="26sp"
                                        android:text="@string/invoice_details_invoice" />

                                    <TextView
                                        android:id="@+id/tvInvoiceName_FID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        tools:text="SI_30" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="end"
                                    android:layout_marginTop="@dimen/default_padding"
                                    android:text="@string/invoice_details_balance_due" />

                                <TextView
                                    android:id="@+id/tvBalanceHead_FID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="end"
                                    tools:text="10058620.00" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_dimen_32"
                                    android:baselineAligned="false">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/order_details_bill_to" />

                                        <TextView
                                            android:id="@+id/tvSupplierName_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif-medium"
                                            tools:text="Adrian Trif" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="end"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/Invoice_detailsinvoice_date" />

                                            <TextView
                                                android:id="@+id/tvInvoiceDate_FID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="end"
                                                android:minWidth="80dp"
                                                android:layout_marginStart="@dimen/default_padding"
                                                tools:text="25 Jan, 2017" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/tvDueDateTitle_FID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:visibility="gone"
                                                android:text="@string/invoice_details_due_date" />

                                            <TextView
                                                android:id="@+id/tvDueDate_FID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="end"
                                                android:minWidth="80dp"
                                                android:layout_marginStart="@dimen/default_padding"
                                                android:visibility="gone"
                                                tools:text="25 Jan, 2017" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/invoice_details_order_number" />

                                            <TextView
                                                android:id="@+id/tvOrderNumber_FID"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="end"
                                                android:minWidth="80dp"
                                                android:layout_marginStart="@dimen/default_padding"
                                                tools:text="SO_47" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_dimen_32"
                                    android:background="@color/bg_header_table_order_product"
                                    android:gravity="center_vertical">


                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/item_product_number" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/item_product_sku" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/item_product_info" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="@string/item_product_qty" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|end"
                                        android:text="@string/item_product_unit_price" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical|end"
                                        android:text="@string/item_product_taxes" />

                                    <TextView
                                        style="@style/TextHeaderTableProductStyle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical|end"
                                        android:text="@string/item_product_amount" />


                                </LinearLayout>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvProductList_FID"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/default_dimen_32"
                                    android:gravity="end">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="end">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:text="@string/order_details_sub_total" />

                                        <TextView
                                            android:id="@+id/tvDiscountTitle_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:visibility="gone"
                                            android:text="@string/order_details_discount" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:text="@string/order_details_taxes" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:text="@string/order_details_total" />

                                        <TextView
                                            android:id="@+id/tvPaymentMadeTitle_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:visibility="gone"
                                            android:text="@string/invoice_details_payment_made" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:text="@string/invoice_details_balance_due" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/default_padding"
                                        android:minWidth="80dp"
                                        android:orientation="vertical"
                                        android:gravity="end">

                                        <TextView
                                            android:id="@+id/tvSubTotal_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            tools:text="10058620.00" />

                                        <TextView
                                            android:id="@+id/tvDiscount_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:visibility="gone"
                                            tools:text="10058620.00" />

                                        <TextView
                                            android:id="@+id/tvTaxes_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            tools:text="10058620.00" />

                                        <TextView
                                            android:id="@+id/tvTotal_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            tools:text="10058620.00" />

                                        <TextView
                                            android:id="@+id/tvPaymentMade_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            android:visibility="gone"
                                            tools:text="10058620.00" />

                                        <TextView
                                            android:id="@+id/tvBalanceDue_FID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="end"
                                            android:layout_marginTop="@dimen/default_padding"
                                            tools:text="10058620.00" />

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:paddingStart="@dimen/default_padding"
                            android:paddingEnd="@dimen/default_padding"
                            android:paddingBottom="@dimen/default_padding"
                            >

                            <TextView
                                style="@style/ContentTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/attachments" />

                            <TextView
                                android:id="@+id/tvAttachments_FID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding_half"
                                android:alpha="0.83"
                                android:lineSpacingExtra="@dimen/default_padding_3dp"
                                android:text="@string/no_attachments"/>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

            <include layout="@layout/view_bottom_history"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/view_error_with_holder_icon"
        android:visibility="gone"/>

</FrameLayout>