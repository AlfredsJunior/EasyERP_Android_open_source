<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:orientation="vertical"
    tools:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvContent_FID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleInvoice_FID"
                style="@style/TextDetailsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_with_bottom_divider_line"
                android:padding="@dimen/default_padding"
                tools:text="Web development" />

            <TextView
                style="@style/TextContentTitle.WithoutPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:text="Invoice Preview" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_dimen_32"
                    android:paddingTop="@dimen/default_dimen_32"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tvInvoiceStatus_FID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding_quart"
                        android:paddingEnd="@dimen/default_padding"
                        android:paddingStart="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding_quart"
                        tools:background="@drawable/bg_order_status"
                        tools:text="Draft/ Quotation" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:baselineAligned="false"
                        android:padding="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCompanyName_FID"
                                style="@style/PdfStyle.BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="16sp"
                                android:textColor="@color/color_text_black"
                                tools:text="EasyERP Inc" />

                            <TextView
                                android:id="@+id/tvCompanyAddress_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:lineSpacingExtra="4dp"
                                android:textColor="@color/color_text_black"
                                tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_padding"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                style="@style/RobotoLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/invoice_details_invoice"
                                android:textAllCaps="true"
                                android:textColor="@color/color_text_black"
                                android:textSize="@dimen/text_sixe_pdf_type" />

                            <TextView
                                android:id="@+id/tvInvoiceName_FID"
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:textColor="@color/color_text_gray"
                                tools:text="SO_30" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/PdfStyle.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:text="@string/invoice_details_balance_due" />

                    <TextView
                        android:id="@+id/tvBalanceHead_FID"
                        style="@style/PdfStyle.BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        tools:text="10058620.00" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_details_bill_to" />

                            <TextView
                                android:id="@+id/tvSupplierName_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                tools:text="Adrian Trif" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                android:text="@string/Invoice_details_invoice_date" />

                            <TextView
                                android:id="@+id/tvDueDateTitle_FID"
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/invoice_details_due_date"
                                android:visibility="gone" />

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/invoice_details_order_number" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_padding"
                            android:gravity="end"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvoiceDate_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                tools:text="25 Jan, 2017" />

                            <TextView
                                android:id="@+id/tvDueDate_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:visibility="gone"
                                tools:text="25 Jan, 2017" />

                            <TextView
                                android:id="@+id/tvOrderNumber_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                tools:text="SO_47" />
                        </LinearLayout>


                    </LinearLayout>

                    <include layout="@layout/view_include_header_table_product" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvProductList_FID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:layout_marginStart="@dimen/default_padding" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/order_details_sub_total" />

                            <TextView
                                android:id="@+id/tvDiscountTitle_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/order_details_discount"
                                android:visibility="gone" />

                            <TextView
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/order_details_taxes" />

                            <TextView
                                style="@style/PdfStyle.BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/order_details_total" />

                            <TextView
                                android:id="@+id/tvPaymentMadeTitle_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/invoice_details_payment_made"
                                android:visibility="gone" />

                            <TextView
                                style="@style/PdfStyle.BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:text="@string/invoice_details_balance_due" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_padding"
                            android:paddingEnd="@dimen/default_padding_quart"
                            android:gravity="end"
                            android:minWidth="80dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSubTotal_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                tools:text="10058620.00" />

                            <TextView
                                android:id="@+id/tvDiscount_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:visibility="gone"
                                tools:text="10058620.00" />

                            <TextView
                                android:id="@+id/tvTaxes_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                tools:text="10058620.00" />

                            <TextView
                                android:id="@+id/tvTotal_FID"
                                style="@style/PdfStyle.BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                tools:text="10058620.00" />

                            <TextView
                                android:id="@+id/tvPaymentMade_FID"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                android:visibility="gone"
                                tools:text="10058620.00" />

                            <TextView
                                android:id="@+id/tvBalanceDue_FID"
                                style="@style/PdfStyle.BoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:gravity="end"
                                tools:text="10058620.00" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvPaymentsTitle_FID"
                style="@style/TextContentTitle.WithoutPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:text="@string/invoice_details_subtitle_payments"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPayments_FID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_half"
                android:paddingEnd="@dimen/default_padding_half"
                android:paddingStart="@dimen/default_padding_half"
                android:visibility="gone" />


            <TextView
                style="@style/TextContentTitle.WithoutPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:text="@string/attachments" />

            <TextView
                android:id="@+id/tvEmptyAttachments_FID"
                style="@style/TextNoDataStyle.Attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_padding_half" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvAttachments_FID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_dimen_32"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_padding_half"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/view_bottom_history" />

</LinearLayout>