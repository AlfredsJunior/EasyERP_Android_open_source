<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsvContent_FSCD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_FSCD"
            style="@style/TextDetailsTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_bottom_divider_line"
            android:padding="@dimen/default_padding"
            tools:text="Web development" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding_half"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/warehouse">

                    <EditText
                        android:id="@+id/etWarehouse_FSCD"
                        style="@style/DefaultTheme.LeadInputFieldStyle"
                        android:text="@string/err_not_specified" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_date">

                    <EditText
                        android:id="@+id/etDate_FSCD"
                        style="@style/DefaultTheme.LeadInputFieldStyle"
                        android:text="@string/err_not_specified" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/adjusted_by">

                    <EditText
                        android:id="@+id/etAdjustedBy_FSCD"
                        style="@style/DefaultTheme.LeadInputFieldStyle"
                        android:text="@string/err_not_specified" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>



                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rectangle_round_grey"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/default_padding_half"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/default_padding_half"
                    android:padding="@dimen/default_padding_middle">

                <TextView
                    android:id="@+id/tvDescription_FSCD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="Duis hendrerit ac nisl eget bibendum. Fusce euismod velit turpis, id scelerisque nibh consequat eu. Nulla facilisi. Maecenas et imperdiet diam. Morbi posuere tellus vel sollicitudin pharetra. Aliquam erat volutpat. Aenean et quam eget tortor consequat fermentum. Ut et congue lacus, bibendum bibendum est. Maecenas quis porttitor lorem, vel vehicula mauris. Proin vel sem dui. Sed vulputate urna et facilisis tempus. Morbi ipsum ligula, placerat vitae lacinia in, placerat id mauris." />

                </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding_big"
            android:background="@color/color_bg_header_table_product"
            android:gravity="center_vertical">

            <TextView
                style="@style/PdfStyle.TableStyle.Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product" />

            <TextView
                style="@style/PdfStyle.TableStyle.Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adjusted" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvProducts_FSCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
