<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/default_padding_medium_small"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/default_padding">

        <RelativeLayout
            android:id="@+id/llFirstLine_VLIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvPriority_VLIOAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/default_padding_quart"
                tools:src="@drawable/ic_cold"/>

            <TextView
                android:id="@+id/tvStatus_VLIOAL"
                style="@style/SmallChipsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/default_padding_middle"
                tools:text="Not Interested"/>

            <TextView
                android:id="@+id/tvName_VLIOAL"
                style="@style/RobotoCondensedBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvPriority_VLIOAL"
                android:layout_toStartOf="@id/tvStatus_VLIOAL"
                android:textSize="@dimen/text_list_item_medium_16"
                android:maxLines="2"
                android:layout_centerInParent="true"
                tools:text="Web developmentsd s sd sd ds ds ds ds sd sd sd sd s s ds s s"/>

        </RelativeLayout>

        <TextView
            style="@style/RobotoRegular"
            android:id="@+id/tvAssignedTo_VLIOAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_list_item_medium_16"
            tools:text="Andriy Matviychuk"
            android:layout_marginTop="@dimen/padding_very_minimum"
            android:textColor="@color/color_text_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_very_minimum">

            <TextView
                android:id="@+id/tvCreatedEditedBy_VLIOAL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_list_item_medium_16"
                tools:text="Last Edited: Today, at 2:45 PM by Test Admin_item_medium"
                android:layout_weight="1"/>

            <TextView
                style="@style/RobotoCondensedBold"
                android:id="@+id/tvRevenue_VLIOAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small_14"
                tools:text="4500 $"
                android:gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
