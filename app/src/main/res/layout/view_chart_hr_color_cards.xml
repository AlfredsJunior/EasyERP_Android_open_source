<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_padding_quart">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/default_padding"
            android:text="@string/hired_fires_statistic"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_medium_16" />

        <LinearLayout
            android:id="@+id/llHiredFired_VCHCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/tag_bg_blue_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvEmployeesValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="104" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/employees"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/tag_bg_blue_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvHiredValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="1" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hired"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/tag_bg_red">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvFiredValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="1" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fired"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/default_padding"
            android:text="@string/vacation_days"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/text_list_item_medium_16" />

        <LinearLayout
            android:id="@+id/llVacationDays_VCHCC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/tag_bg_red_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvVacationValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="3" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vacation"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/tag_bg_orange">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvPersonalValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="0" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personal"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/color_chips_light_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvSickValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="0" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sick"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/color_chips_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_padding_quart"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_padding_big"
                    android:paddingEnd="@dimen/default_padding_quart"
                    android:paddingStart="@dimen/default_padding_quart"
                    android:paddingTop="@dimen/default_padding_big">

                    <TextView
                        android:id="@+id/tvEducationValue_VCHCC"
                        style="@style/ChartValueTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_main_text_color"
                        tools:text="0" />

                    <TextView
                        style="@style/TextListInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/education"
                        android:textColor="@color/white_main_text_color" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>