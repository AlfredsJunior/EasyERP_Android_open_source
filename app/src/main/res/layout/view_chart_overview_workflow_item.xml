<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_half"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding_quart"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_padding_big"
            android:paddingEnd="@dimen/default_padding_quart"
            android:paddingStart="@dimen/default_padding_quart"
            android:paddingTop="@dimen/default_padding_big">

            <TextView
                android:id="@+id/tvWokrkflowValue_VCOWI"
                style="@style/ChartValueTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWorkflowCircle_VCOWI"
                    android:layout_width="@dimen/circle_indicator_small_size"
                    android:layout_height="@dimen/circle_indicator_small_size"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    tools:src="@drawable/ic_chart_overview_fulfilled" />

                <TextView
                    android:id="@+id/tvWokrkflowLabel_VCOWI"
                    style="@style/TextListInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_quart"
                    android:text="@string/total_revenue"
                    tools:text="Draft/Quotation" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>