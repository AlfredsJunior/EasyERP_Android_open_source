<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_with_bottom_divider_line_selector"
                android:padding="@dimen/default_padding_middle">

    <ImageView
        android:id="@+id/ivCompanyImage_VLIC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/ivCompanyImage_VLIC"
        android:layout_toStartOf="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:paddingLeft="@dimen/default_padding">

        <TextView
            android:id="@+id/tvCompanyName_VLIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Happy Fingers"/>

        <TextView
            android:id="@+id/tvCompanyCountry_VLIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            tools:text="Ukraine"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/ivCompanyImage_VLIC"
        android:layout_toEndOf="@id/ivCompanyImage_VLIC"
        android:paddingRight="@dimen/default_padding"
        android:paddingLeft="@dimen/default_padding">

        <TextView
            android:id="@+id/tvCompanyEmail_VLIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="test@test.com"/>

        <TextView
            android:id="@+id/tvCompanyPhone_VLIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            tools:text="80502312123"/>

    </LinearLayout>

</RelativeLayout>