<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <View
            android:id="@+id/vLine_LILH"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>


        <ImageView
            android:id="@+id/ivIconType_LILH"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/default_padding_half"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:background="@drawable/bg_circle_border" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_padding"
        android:layout_marginTop="@dimen/default_padding_half"
        android:layout_marginBottom="@dimen/default_padding_half"
        android:orientation="vertical"
        android:background="@drawable/bg_border_rectangle"
        android:padding="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPersonName_LILH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:text="safds"/>

            <TextView
                android:id="@+id/tvDate_LILH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="safds"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_padding_small"
            android:background="@color/colorPrimary"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/tvAction_LILH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half"/>

        <TextView
            android:id="@+id/tvMessage_LILH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_half"/>

    </LinearLayout>

</LinearLayout>