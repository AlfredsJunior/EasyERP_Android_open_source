<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsvContent_FPD"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvTitlePayment_FPD"
            style="@style/TextDetailsTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_with_bottom_divider_line"
            android:padding="@dimen/default_padding"
            tools:text="Web development" />

        <TextView
            style="@style/TextContentTitle.WithoutPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:text="Payment Preview" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/default_dimen_32"
                android:paddingTop="@dimen/default_dimen_32"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPaymentStatus_FPD"
                    style="@style/PdfStyle.BoldText.WorkflowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_chips_green"
                    tools:text="Draft/ Quotation" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:baselineAligned="false"
                    android:padding="@dimen/default_padding">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCompanyName_FPD"
                            style="@style/PdfStyle.BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="16sp"
                            android:textColor="@color/color_text_black"
                            tools:text="EasyERP Inc" />

                        <TextView
                            android:id="@+id/tvCompanyAddress_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/color_text_black"
                            tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPaymentName_FPD"
                            style="@style/RobotoLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_details_order"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_black"
                            android:textSize="@dimen/text_sixe_pdf_type" />

                        <TextView
                            android:id="@+id/tvSourceDocument_FPD"
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/color_text_gray"
                            tools:text="SO_30" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="@dimen/default_dimen_32"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_details_bill_to" />

                        <TextView
                            android:id="@+id/tvSupplierName_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            tools:text="Adrian Trif" />

                        <TextView
                            android:id="@+id/tvSupplierAddress_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Transcarpation, 88000, Ukraine, Uzhhorod, 47 Shandora Petefi sq., 7th floor," />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_details_payment_date" />

                        <TextView
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_details_bank_account" />

                        <TextView
                            style="@style/PdfStyle.FieldTitleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_details_account" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPaymentDate_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="25 Jan, 2017" />

                        <TextView
                            android:id="@+id/tvBankAccount_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="25 Jan, 2017" />

                        <TextView
                            android:id="@+id/tvAccount_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="25 Jan, 2017" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="@dimen/default_padding_big"
                    android:background="@color/color_bg_header_table_product"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_product_number" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/payment_details_type" />

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/payment_details_table_account"/>

                    <TextView
                        style="@style/PdfStyle.TableStyle.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:text="@string/item_product_amount" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/default_padding"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/PdfStyle.TableStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <TextView
                        style="@style/PdfStyle.TableStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Paid Amount" />

                    <TextView
                        style="@style/PdfStyle.TableStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvAmount_FPD"
                        style="@style/PdfStyle.TableStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@color/color_text_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PdfStyle.BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_padding_half"
                            android:text="@string/order_details_payment_details" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@string/order_details_name_of_beneficiary" />

                            <TextView
                                android:id="@+id/tvNameBeneficiary_FPD"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                tools:text="Name of Beneficiary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@string/order_details_bank" />

                            <TextView
                                android:id="@+id/tvBank_FPD"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                tools:text="Bank" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@string/order_details_bank_address" />

                            <TextView
                                android:id="@+id/tvBankAddress_FPD"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                tools:text="Bank address" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@string/order_details_iban" />

                            <TextView
                                android:id="@+id/tvBankIBAN_FPD"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                tools:text="2415464351" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PdfStyle.FieldTitleStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@string/order_details_swift_code" />

                            <TextView
                                android:id="@+id/tvSwiftCode_FPD"
                                style="@style/PdfStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding"
                                tools:text="523" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PdfStyle.BoldText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_padding_half"
                            android:text="@string/order_details_other_information" />

                        <TextView
                            android:id="@+id/tvOwnerName_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Test" />

                        <TextView
                            android:id="@+id/tvOwnerSite_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="www.google.ua" />

                        <TextView
                            android:id="@+id/tvOwnerEmail_FPD"
                            style="@style/PdfStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="info@thinkmobiles.com" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/PdfStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:text="@string/order_details_message"
                    android:textColor="@color/color_text_red" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:background="@color/color_text_black" />

                <TextView
                    android:id="@+id/tvAdvice_FPD"
                    style="@style/PdfStyle.BoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    tools:text="@string/order_details_advice" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>