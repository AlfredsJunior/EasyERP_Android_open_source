<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvJobType_VEDI"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        tools:text="Full Time"/>

    <TextView
        android:id="@+id/tvSchedule_VEDI"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="UA-40"/>

    <TextView
        android:id="@+id/tvContract_VEDI"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Base Contract"/>

    <TextView
        android:id="@+id/tvScheduledPay_VEDI"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Monthly"/>

    <TextView
        android:id="@+id/tvSalary_VEDI"
        style="@style/ProductTableTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="$ 650"/>

</LinearLayout>