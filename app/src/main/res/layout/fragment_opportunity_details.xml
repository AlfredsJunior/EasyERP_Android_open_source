<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llMainContent_FOD"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvContent_FOD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_padding">

            <TextView
                android:id="@+id/tvNameOpportunity_FOD"
                style="@style/TextDetailsTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                tools:text="Web development"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="@dimen/default_padding">

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half"
                        android:hint="@string/current_status">

                        <EditText
                            android:id="@+id/etCurrentStatus_FOD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:text="@string/err_not_specified"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half"
                        android:hint="@string/amount">

                        <EditText
                            android:id="@+id/etRevenue_FOD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:text="@string/err_not_specified"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginEnd="@dimen/default_padding_half"
                        android:hint="@string/close_date">

                        <EditText
                            android:id="@+id/etCloseDate_FOD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:text="@string/err_not_specified"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/default_padding_half"
                        android:hint="@string/assigned_to">

                        <EditText
                            android:id="@+id/etAssignedTo_FOD"
                            style="@style/DefaultTheme.LeadInputFieldStyle"
                            android:text="@string/err_not_specified"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tags"/>

                <com.ismaeltoe.FlowLayout
                    android:id="@+id/flowLayoutTags_FOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    app:horizontalPadding="@dimen/default_padding_half"
                    app:verticalPadding="@dimen/default_padding_half">

                    <TextView
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/default_padding_half"
                        android:paddingEnd="@dimen/default_padding_quart"
                        android:paddingStart="@dimen/default_padding_quart"
                        android:paddingTop="@dimen/default_padding_half"
                        android:visibility="visible"/>

                </com.ismaeltoe.FlowLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"/>

                <TextView
                    android:id="@+id/tvEmptyContact_FOD"
                    style="@style/TextNoDataStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_padding_3dp"
                    android:paddingBottom="@dimen/default_padding_half"
                    android:paddingTop="@dimen/default_padding_half"
                    tools:visibility="visible"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flContainerContacts_FOD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/default_padding_half"
                android:paddingEnd="@dimen/default_padding_half">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvContacts_FOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_half"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="@dimen/default_padding">

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvEmptyCompany_FOD"
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_3dp"
                        android:layout_marginTop="@dimen/default_padding"/>

                    <LinearLayout
                        android:id="@+id/llCompanyContainer_FOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/default_padding">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_padding_half"
                                android:layout_marginStart="@dimen/default_padding_3dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/image_size_large"
                                    android:layout_height="@dimen/image_size_large"
                                    app:cardBackgroundColor="@android:color/white">

                                    <ImageView
                                        android:id="@+id/ivCompanyImage_FOD"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/placeholder"/>

                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:id="@+id/tvCompanyTitleUrl_FOD"
                                    style="@style/TextUrlStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_small"
                                    tools:text="www.google.com"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/name"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    e

                                    <EditText
                                        android:id="@+id/etCompanyName_FOD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:text="@string/err_not_specified"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding"
                                    android:hint="@string/street"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    <EditText
                                        android:id="@+id/etCompanyStreet_FOD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:text="@string/err_not_specified"/>

                                </android.support.design.widget.TextInputLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding"
                                    android:hint="@string/hint_city"
                                    android:textColorHint="@color/color_text_gray"
                                    app:hintAnimationEnabled="false">

                                    <EditText
                                        android:id="@+id/etCompanyCity_FOD"
                                        style="@style/DefaultTheme.LeadInputFieldStyle"
                                        android:text="@string/err_not_specified"/>

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half"
                                android:hint="@string/state">

                                <EditText
                                    android:id="@+id/etCompanyState_FOD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:text="@string/err_not_specified"/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:hint="@string/zip">

                                <EditText
                                    android:id="@+id/etCompanyZipcode_FOD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:text="@string/err_not_specified"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half"
                                android:hint="@string/phone">

                                <EditText
                                    android:id="@+id/etCompanyPhone_FOD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:text="@string/err_not_specified"/>

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:hint="@string/country">

                                <EditText
                                    android:id="@+id/etCompanyCountry_FOD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:text="@string/err_not_specified"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                style="@style/DefaultTheme.LeadTextInputLayoutStyle"
                                android:layout_marginEnd="@dimen/default_padding_half"
                                android:hint="@string/email">

                                <EditText
                                    android:id="@+id/etCompanyEmail_FOD"
                                    style="@style/DefaultTheme.LeadInputFieldStyle"
                                    android:text="@string/err_not_specified"/>

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/default_padding_half"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    style="@style/TextContentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachments"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/default_padding_half"
                    android:paddingTop="@dimen/default_padding_half">

                    <TextView
                        android:id="@+id/tvEmptyAttachments_FOD"
                        style="@style/TextNoDataStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding_3dp"
                        android:paddingBottom="@dimen/default_padding_half"
                        android:paddingTop="@dimen/default_padding_half"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvAttachments_FOD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/view_bottom_history"/>

</LinearLayout>