<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlRefresh_FOD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsvContent_FOD"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">


                        <TextView
                            android:id="@+id/tvOrderStatus_FOD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginStart="@dimen/default_padding"
                            android:elevation="3dp"
                            android:minWidth="120dp"
                            android:padding="@dimen/default_padding_small"
                            android:background="@drawable/bg_order_status"
                            android:gravity="center"
                            tools:text="Draft/ Quotation" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="80dp"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvCompanyName_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        tools:text="EasyERP Inc" />

                                    <TextView
                                        android:id="@+id/tvCompanyAddress_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Uzhhorod, 47 Shandora Petefi sq., 7th floor, Transcarpation, 88000, Ukraine" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAllCaps="true"
                                        android:textSize="26sp"
                                        android:text="@string/order_details_order" />

                                    <TextView
                                        android:id="@+id/tvOrderName_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="SO_30" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_dimen_32"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/order_details_bill_to" />

                                    <TextView
                                        android:id="@+id/tvSupplierName_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        tools:text="Adrian Trif" />

                                    <TextView
                                        android:id="@+id/tvSupplierAddress_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Transcarpation, 88000, Ukraine, Uzhhorod, 47 Shandora Petefi sq., 7th floor," />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/order_details_expected_date" />

                                        <TextView
                                            android:id="@+id/tvExpectedDate_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_dimen_32"
                                            tools:text="25 Jan, 2017" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/order_details_order_date" />

                                        <TextView
                                            android:id="@+id/tvOrderDate_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_dimen_32"
                                            tools:text="25 Jan, 2017" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_dimen_32"
                                android:background="@color/bg_header_table_order_product"
                                android:gravity="center_vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_number" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_sku" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_info" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="center"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_qty" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|end"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_unit_price" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="center_vertical|end"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_taxes" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|end"
                                    style="@style/TextHeaderTableProductStyle"
                                    android:text="@string/item_product_amount" />

                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rvProductList_FOD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="end">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:text="@string/order_details_sub_total" />

                                    <TextView
                                        android:id="@+id/tvDiscountTitle_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:visibility="gone"
                                        android:text="@string/order_details_discount" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:text="@string/order_details_taxes" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:text="@string/order_details_total" />

                                    <TextView
                                        android:id="@+id/tvPrepaidTitle_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:visibility="gone"
                                        android:text="@string/order_details_prepaid" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_padding"
                                    android:minWidth="50dp"
                                    android:orientation="vertical"
                                    android:gravity="end">

                                    <TextView
                                        android:id="@+id/tvSubTotal_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        tools:text="10058620.00" />

                                    <TextView
                                        android:id="@+id/tvDiscount_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:visibility="gone"
                                        tools:text="10058620.00" />

                                    <TextView
                                        android:id="@+id/tvTaxes_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        tools:text="10058620.00" />

                                    <TextView
                                        android:id="@+id/tvTotal_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        tools:text="10058620.00" />

                                    <TextView
                                        android:id="@+id/tvPrepaid_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="end"
                                        android:layout_marginTop="@dimen/default_padding"
                                        android:visibility="gone"
                                        tools:text="10058620.00" />

                                </LinearLayout>

                            </LinearLayout>




                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="@dimen/default_padding"
                                android:background="@android:color/black" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_dimen_32"
                                android:baselineAligned="false">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/default_padding_half"
                                        android:text="@string/order_details_payment_details" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="140dp"
                                            android:text="@string/order_details_name_of_beneficiary" />
                                        <TextView
                                            android:id="@+id/tvNameBeneficiary_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_padding"
                                            tools:text="Name of Beneficiary" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="140dp"
                                            android:text="@string/order_details_bank" />
                                        <TextView
                                            android:id="@+id/tvBank_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_padding"
                                            tools:text="Bank" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="140dp"
                                            android:text="@string/order_details_bank_address" />
                                        <TextView
                                            android:id="@+id/tvBankAddress_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_padding"
                                            tools:text="Bank address" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="140dp"
                                            android:text="@string/order_details_iban" />
                                        <TextView
                                            android:id="@+id/tvBankIBAN_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_padding"
                                            tools:text="2415464351" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:minWidth="140dp"
                                            android:text="@string/order_details_swift_code" />
                                        <TextView
                                            android:id="@+id/tvSwiftCode_FOD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/default_padding"
                                            tools:text="523" />

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/default_padding"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/default_padding_half"
                                        android:text="@string/order_details_other_information" />

                                    <TextView
                                        android:id="@+id/tvOwnerName_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Test" />

                                    <TextView
                                        android:id="@+id/tvOwnerSite_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="www.google.ua" />

                                    <TextView
                                        android:id="@+id/tvOwnerEmail_FOD"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="info@thinkmobiles.com" />

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:text="@string/order_details_message"
                                android:textColor="@android:color/holo_red_light" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/default_padding"
                                android:background="@android:color/black" />

                            <TextView
                                android:id="@+id/tvAdvice_FOD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding"
                                android:textStyle="bold"
                                android:text="@string/order_details_advice"
                                android:textColor="@android:color/black" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@android:color/white"
                                android:padding="@dimen/default_padding">

                                <TextView
                                    style="@style/ContentTitleStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/attachments" />

                                <TextView
                                    android:id="@+id/tvAttachments_FOD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/default_padding_half"
                                    android:alpha="0.83"
                                    android:drawablePadding="@dimen/default_padding_3dp"
                                    android:lineSpacingExtra="@dimen/default_padding_3dp"
                                    android:text="@string/no_attachments"/>

                            </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

            <include layout="@layout/view_bottom_history"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include layout="@layout/view_error_with_holder_icon"
        android:visibility="gone"/>

</FrameLayout>